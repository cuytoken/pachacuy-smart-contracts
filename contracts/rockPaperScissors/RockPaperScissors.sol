pragma solidity ^0.8.4;

import "@openzeppelin/contracts-upgradeable/access/AccessControlUpgradeable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/Initializable.sol";
import "@openzeppelin/contracts-upgradeable/proxy/utils/UUPSUpgradeable.sol";

/// @custom:security-contact lee@cuytoken.com
contract RockPaperScissors is
    Initializable,
    AccessControlUpgradeable,
    UUPSUpgradeable
{
    bytes32 public constant UPGRADER_ROLE = keccak256("UPGRADER_ROLE");

    uint8 public constant R = 0;
    uint8 public constant P = 1;
    uint8 public constant S = 2;

    /// @custom:oz-upgrades-unsafe-allow constructor
    constructor() initializer {}

    function initialize() public initializer {
        __AccessControl_init();
        __UUPSUpgradeable_init();

        _grantRole(DEFAULT_ADMIN_ROLE, _msgSender());
        _grantRole(UPGRADER_ROLE, _msgSender());
    }

    function playRockPaperScissors(uint8 _playerOne, uint8 _playerTwo)
        external
        pure
        returns (uint8 winner)
    {
        require(
            _playerOne == R || _playerOne == P || _playerOne == S,
            "Wrong choice P1"
        );
        require(
            _playerTwo == R || _playerTwo == P || _playerTwo == S,
            "Wrong choice P2"
        );

        if ((_playerOne + 1) % 3 == _playerTwo) winner = 2;
        else if (_playerOne == _playerTwo) winner = 0;
        else winner = 1;
    }

    ///////////////////////////////////////////////////////////////
    ////                   STANDARD FUNCTIONS                  ////
    ///////////////////////////////////////////////////////////////

    function _authorizeUpgrade(address newImplementation)
        internal
        override
        onlyRole(UPGRADER_ROLE)
    {}
}
